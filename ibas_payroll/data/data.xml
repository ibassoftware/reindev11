            <field name="code">TRIP</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = sum(employee.trip_ids.filtered(lambda r: r.create_date &gt;= payslip.date_from and r.create_date &lt;= payslip.date_to).mapped('amount'))</field>
            <field name="sequence" eval="120"/>
        </record>
